import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int a=s.nextInt();
        double hra,da;
        if(a<15000){
            hra=(0.15*a);
            da=(0.90*a); 
        }
        else{
            hra=5000;
            da=(0.98*a);
        }
        double b= a+hra+da;
        System.out.printf("%.2f",b);
    }
}
